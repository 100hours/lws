- content_for :page_title, "Gallery"
- content_for :extra_body_classes, "gallery"
- content_for :javascript do 
  :javascript
    $('.image-gallery').magnificPopup({
    type: 'image',
    gallery:{enabled:true},
    delegate: 'a', // child items selector, by clicking on it popup will open
    
    });
%h1 Photo Gallery

.image-gallery.container
  - gallery_images.each do |n, caption|
    .image.span3
      = link_to image_url("http://s3.amazonaws.com/HundredHours/gallery_images/#{n}.JPG"), title: caption do
        = image_tag "http://s3.amazonaws.com/HundredHours/gallery_thumbnails/#{n}.JPG", alt: caption
