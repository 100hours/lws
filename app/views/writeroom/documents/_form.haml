= form_for @document, url: (@document.new_record? ? writeroom_documents_path : writeroom_document_path(@document)), html: { class: "form-horizontal" } do |f|
  - if @document.errors.any?
    #error_explanation
      %h2= "#{pluralize(@document.errors.count, "error")} prohibited this document from being saved:"
      %ul
        - @document.errors.full_messages.each do |msg|
          %li= msg

  .row
    .span6
      .control-group
        = f.label :title, class: "control-label"
        .controls
          = f.text_field :title, placeholder: "Untitled"
          - unless @document.new_record?
            #connection-status.label
              Initialising...
    .span6
      - unless @document.new_record?
        .control-group
          = f.label :word_count, class: "control-label"
          .controls
            = f.number_field :word_count, value: @document.word_count, class: "uneditable-input input", readonly: "readonly"
  .row
    .span12
      - if @document.new_record?
        .control-group
          .controls
            = f.submit class: "btn"
      - else
        .control-group
          = f.label :body, class: "control-label"
          .controls
            = f.text_area :body, id: 'redactor'

- content_for :navigation do
  %li
    = link_to new_writeroom_document_path do
      %i.icon-file
      New Document
